<% include ../layout/header %> <% include ../layout/navbar %>

<div class="row justify-content-center p-5 m-0">
	<div class="col-md-3 m-3 border p-3 shadow-sm">
		<form action="/data/new" method="POST">
			<h1 class="text-center">Data Form</h1>
			<div class="form-group">
				<input
					type="text"
					name="name"
					class="form-control"
                    placeholder="Name"
                    autofocus
                    required
				/>
			</div>
			<div class="form-group">
				<input
					type="email"
					name="email"
					class="form-control"
                    placeholder="Email"
                    required
				/>
			</div>
			<div class="form-group">
				<input
					type="number"
					name="age"
					class="form-control"
                    placeholder="Age"
                    required
				/>
            </div>
            <p>Gender</p>
			<div class="custom-control custom-radio custom-control-inline mb-3">
				<input
					type="radio"
					id="gender-female"
					name="gender"
                    class="custom-control-input"
                    value="female"
				/>
				<label class="custom-control-label" for="gender-female">Female</label>
			</div>
			<div class="custom-control custom-radio custom-control-inline">
				<input
					type="radio"
					id="gender-male"
					name="gender"
                    class="custom-control-input"
                    value="male"
				/>
				<label class="custom-control-label" for="gender-male">Male</label>
            </div>
            <input class="btn btn-primary btn-block" type="submit" value="send">
		</form>
	</div>
</div>

<% include ../layout/footer %>
